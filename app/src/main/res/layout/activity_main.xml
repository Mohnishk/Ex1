<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff5a5a5a"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@mipmap/speedo_bg"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <com.try1.mohnishkumar.ex1.SpeedView
        android:id="@+id/speedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#ff000000"
        android:shadowDx="14"
        android:shadowDy="14"
        android:shadowRadius="24"
        android:singleLine="true"
        android:text="@string/speed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:textSize="80sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#ff000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:text="@string/speed_units"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff658ba6"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/speedLabel"
        android:layout_marginTop="84dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="100dp"
        android:shadowColor="#ff000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:text="@string/battery_range"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff658ba6"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:src="@mipmap/blue_needle"
        android:layout_centerHorizontal="true"
        android:contentDescription="Speedo_Needle" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView3"
        android:src="@mipmap/orange_needle"
        android:layout_centerHorizontal="true"
        android:contentDescription="Power_Needle" />

</RelativeLayout>
